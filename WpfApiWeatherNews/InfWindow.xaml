<Window x:Class="WpfApiWeatherNews.InfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApiWeatherNews"
        mc:Ignorable="d"
        Title="InfWindow" Height="143" Width="325" WindowStyle="None" Background="White" ResizeMode="NoResize">
    <Grid Height="143" Width="325"  Background="#FFD2D2D2" >
        <TextBlock x:Name="txtTown" HorizontalAlignment="Center" TextWrapping="Wrap" Background="White" FontSize="20" Text="{Binding Town}" VerticalAlignment="Top" Height="48" Width="305" Margin="0,32,0,0" Foreground="#FF292929"/>
        <Button Content="X" HorizontalAlignment="Left" Margin="298,4,0,0" VerticalAlignment="Top" Height="23" Width="23" Click="Button_Click" BorderBrush="{x:Null}" FontSize="14" Background="#FFD2D2D2"/>
        <TextBlock x:Name="txtTemp" HorizontalAlignment="Center" TextWrapping="Wrap" Background="White" FontSize="20" Text="{Binding Temp}" VerticalAlignment="Top" Height="48" Width="305" Margin="0,85,0,0" Foreground="#FF292929"/>
    </Grid>
</Window>
